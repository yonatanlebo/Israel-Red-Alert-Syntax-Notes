# Red Alert Monitor Configuration
# Copy this file to .env and modify as needed

# API Configuration
ALERTS_URL=https://www.oref.org.il/warningMessages/alert/Alerts.json
POLL_INTERVAL=3
REQUEST_TIMEOUT=10

# Location Configuration
TARGET_AREA=רחובות

# MQTT Configuration
MQTT_BROKER=192.168.0.44
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=red_alert_monitor

# MQTT Topics
TOPIC_PREWARNING=redalert/prewarning
TOPIC_ACTIVE=redalert/active
TOPIC_ALLCLEAR=redalert/allclear
